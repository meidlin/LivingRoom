<style type="text/css">


.navigationColumn{
	border: 3px grey solid;
	height: 800px;
	position:relative;
	width: 14%;
}

.createList{
	background-color: hsla(120,100%,100%,0.7);
}

.currentLists{
	background-color: hsla(120,100%,100%,0.7);
}

.moviesColumn{
	width: 82%;
	height: 800px;
	border: 3px solid grey;
	float:right;
	margin-top: -800px;
	background-color: hsla(120,100%,100%,0.7);
}

.wrapper{
	display: inline-block;
	width: 100%;
	height: 800px;
}

.movieImage{
	width: 150px;
	height: 190px;
}



</style>
<br>
<br>
<br>

<div class="wrapper">
	<div class="navigationColumn">
		<div class="createList">
			<h3>Hey {{currentUser.email}} Create a List, Yo</h3>
			<input ng-model="listName" placeholder="list name plz">
			<button ng-click="addList()">Add</button>
		</div>
		<div class="currentLists">
			<h3>My Lists</h3>
			<div ng-repeat="entry in lists">
				<div ng-click="getMoviesForList(entry.id)">
				<a>{{entry.name}}</a>
				</div>
			</div>
		      
		</div>
	</div>

	<div class="moviesColumn row">
		<div ng-repeat="movie in arrayMovies" class="col-md-4">
			<img src={{movie.image_url}} class="movieImage"></img>
			<div> {{movie.title}}</div>
			
		</div>
	</div>
</div>

