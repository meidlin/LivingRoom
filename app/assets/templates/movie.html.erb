<div class="movie-scroll">
  <carousel style="width: 1500px; height: 600px;">   

    <div class="slider">
      <div ng-repeat="movie in movies" style="display: inline-block;" border-color="black" class="movie">
       <div style="width: 100%">

        <div class="movie-image">
          <img src="{{movie.image_url}}" style="width:150px; height: 190px;"/>
        </div>

        <div class="description" ng-show="description">
          {{movie.description}}
        </div>
        <br>

        <div class="rating-runtime" class="thumb-icon">
          <span class="glyphicon glyphicon-thumbs-up">
          </span>
          <strong>Users:</strong>
          {{movie.user_rating}}
          <br>
          <span class="glyphicon glyphicon-thumbs-up">
          </span>
          <strong>Critics:</strong>
          {{movie.critic_rating}}
          <br>
        </div>
        <div class="runtime">
          <strong>Runtime:</strong>
          {{movie.runtime}}
        </div>
      </div>
      <br>
    </div>
  </div>

  <div id="slider-nav" class="arrow icon">
    <span class="glyphicon glyphicon-chevron-left">
      <button data-dir="prev">Previous</button>
    </span>
    <span class="glyphicon glyphicon-chevron-right">
      <button data-dir="next">Next</button>
    </span>
  </div>


